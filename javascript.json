	"Document ready": {
		"prefix": "nwk-doc-ready",
		"body": [
			"\\$(function() {",
			"\t$0",
			"});"
		], 
		"description": "jQuery document.ready"
	},
	"Global loading spinner": {
		"prefix": "nwk-loading-global",
		"body": [
			"window.parent.parent.\\$('.loadingFrame').show();"
		],
		"description": "Shows the global loading spinner"
	},
	"Colorbox": {
		"prefix": "nwk-colorbox",
		"body": [
			"\\$.colorbox({",
			"\twidth: '98%',",
			"\theight: '98%',",
			"\tiframe: true,",
			"\tfastIframe: false,",
			"\tescKey: false,",
			"\toverlayClose: false,",
			"\tfixed: true,",
			"\thref: '$url'",
			"});"
		],
		"description": "Create Colorbox"
